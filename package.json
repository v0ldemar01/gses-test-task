{
  "name": "gses-test-task",
  "version": "1.0.0",
  "description": "Cryptocurrency rate wrapper service",
  "type": "module",
  "main": "src/server.ts",
  "engines": {
    "node": ">=16 <17",
    "npm": ">=7 <9"
  },
  "scripts": {
    "lint:fs": "ls-lint",
    "start:dev": "nodemon --exec ts-node -r tsconfig-paths/register ./src/server.ts",
    "start": "node ./build/server.js",
    "lint:js": "npx eslint \"src/**/*.ts\"",
    "lint": "npm run lint:fs && npm run lint:js",
    "clean": "rimraf build",
    "build": "npm run clean && tsc && tsc-alias -p tsconfig.json"
  },
  "author": "Volodymyr Minchenko",
  "license": "ISC",
  "dependencies": {
    "@fastify/cors": "8.0.0",
    "dotenv": "16.0.1",
    "fastify": "4.3.0"
  },
  "devDependencies": {
    "@ls-lint/ls-lint": "1.11.2",
    "@types/node": "18.6.1",
    "@typescript-eslint/eslint-plugin": "5.30.7",
    "eslint": "8.20.0",
    "eslint-plugin-import": "2.26.0",
    "lint-staged": "13.0.3",
    "nodemon": "^2.0.19",
    "pino-pretty": "8.1.0",
    "rimraf": "3.0.2",
    "simple-git-hooks": "2.8.0",
    "ts-node": "^10.9.1",
    "tsc-alias": "1.7.0",
    "tsconfig-paths": "^4.0.0",
    "typescript": "4.7.4"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  }
}
